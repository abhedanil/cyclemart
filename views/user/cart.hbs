<script>
      function changeQuantity(cartid, proId, quantity, count) {
        $.ajax({
          url: '/change-product-quantity',
          data: {
            cartid: cartid,
            product: proId,
            quantity: quantity,
            count: count
          }, method: 'post',
          success: (response) => {
            if (response.removeProduct) {
              alert('Product removed from the cart')
              location.reload();
            } else {
              location.reload();
            }

          }
        })
      } 
    </script>
<script>
  
    function removeProductFromCart(cartid) {
    
        $.ajax({
          url: '/removeCart',
          data: {
            cartid: cartid
          }, method: 'post',
          success: (response) => {
            alert('Product removed from the cart')
            location.reload();
          }
        })
      } 
  
    </script>