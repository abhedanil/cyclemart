<script>
  function add_to_cart(proId) {
    $.ajax({
      url: '/add-to-cart/' + proId,
      method: 'get',
      success: (response) => {
        if (response.status) {
          Swal.fire(
            'added to Cart!',
            'product added to Cart.',
            'success'
          )
          let count = $('#cart-count').html()
          counts = parseInt(count) + 1
          $('#cart-count').html(counts)
        } else {
          Swal.fire(
            'login!',
            'Please login first.',
            'close()'
          ).then(() => {
            location.href = '/Login'
          })

        }
      }
    })
  }
</script>
