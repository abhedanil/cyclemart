 <div class="site-section">
      <div class="container">
        <div class="row mb-5">
          <form class="col-md-12" method="post">
            <div class="site-blocks-table">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th >Image</th>
                    <th >Product</th>
                    <th >Price</th>
                    <th >Quanity</th>
                    <th >Total</th>
                    <th>Status</th>
                    <th >Action</th>
                   
                  </tr>
                </thead>
                <tbody>
                  {{#each orderProducts.products}}
                  <tr>
                    <td class="product-thumbnail">
                      <img src="/imgUploads/{{pro_Id.Images.0.image1}}" alt="Image" class="img-fluid">
                    </td>
                    <td class="product-name"><h2 class="h5 text-black">{{pro_Id.productName}}</h2></td>
                    <td> ₹{{pro_Id.Price}}</td>
                    <td>{{this.quantity}}</td>
                    <td class="column-5" > ₹ {{this.subTotal}}</td>
                    <td>{{this.status}}</td>
                    <td>
                    {{#if this.orderCancelled}}

                    {{else}}
                      <button class="btn btn-danger cancel-order" style="width: 120px; font-size: small ;" 
                      onclick="cancelOrder('{{../orderProducts._id}}','{{this.pro_Id._id}}','{{this.subTotal}}','{{../order.grandTotal}}','{{this.quantity}}','{{../order.ShippingCharge}}')">Cancel Order</button>

                    {{/if}}
                   </td>
                    

                  
                   
                  </tr>

                 
                  {{/each}}
                </tbody>
              </table>
            </div>
          </form>
        </div>

        
      </div>
    </div>

    <script>
        function cancelOrder(orderId, proId, subtotal,grandTotal,quantity,ShippingCharge) {
					Swal.fire({
						title: 'Are you sure?',
						text: "You won't be able to revert this!",
						icon: 'warning',
						showCancelButton: true,
						confirmButtonColor: '#3085d6',
						cancelButtonColor: '#d33',
						confirmButtonText: 'Yes, cancel Order !'
					}).then((result) => {
						if (result.isConfirmed) {
							Swal.fire(
								'cancelOrder!',
								'Your Order has been canceld.',
								'success'
							).then(() => {
								Ordercancel()
							})
						}
					})
					function Ordercancel() {
          $.ajax({
            url: '/cancel-order',
            data: {
              orderId: orderId,
              proId: proId,
              subtotal:subtotal,
              grandTotal:grandTotal,
              quantity:quantity,  
             ShippingCharge:ShippingCharge
          },
            method: 'post',
            success: (response) => {
            {{!-- alert(response) --}}
              if (response.status) {
              location.reload()
              } else {
            {{!-- location.href = '/viewOrderProducts/' + orderId --}}
          }
            }
          })
        }
	      }
    </script>

    



    </script>